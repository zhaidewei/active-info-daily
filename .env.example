# `heuristic` (default) or `openai` or `deepseek`
ANALYSIS_PROVIDER=heuristic

# 如果使用 OpenAI API 分析，填写以下变量
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# 如果使用 DeepSeek API 分析，填写以下变量
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-reasoner
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_STRICT_MODEL=true

# 可选
REPORT_MAX_ITEMS=80
LLM_INPUT_ITEMS=25
JINA_READER_ENABLED=true
REQUEST_TIMEOUT_SEC=15
TRANSLATION_ENABLED=true
TRANSLATION_MAX_CHARS=9000
LLM_SCORING_ENABLED=true
LLM_SCORING_MAX_ITEMS=80
